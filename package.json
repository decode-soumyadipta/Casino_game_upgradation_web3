{
  "name": "casino-ethereum",
  "version": "1.0.0",
  "description": "Ethereum implementation of the casino game",
  "main": "index.js",
  "scripts": {
    "test": "mocha test/*.test.js",
    "hardhat:test": "hardhat --config hardhat.config.cjs test",
    "hardhat:compile": "hardhat --config hardhat.config.cjs compile",
    "hardhat:node": "hardhat --config hardhat.config.cjs node",
    "hardhat:deploy": "hardhat --config hardhat.config.cjs run scripts/deploy.js",
    "hardhat:deploy:sepolia": "hardhat --config hardhat.config.cjs run scripts/deploy.js --network sepolia",
    "hardhat:coverage": "hardhat --config hardhat.config.cjs coverage",
    "hardhat:gas-report": "REPORT_GAS=true hardhat --config hardhat.config.cjs test",
    "hardhat:clean": "hardhat --config hardhat.config.cjs clean",
    "hardhat:verify": "hardhat --config hardhat.config.cjs verify"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "chai": "^4.3.7",
    "ethers": "^6.8.1",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.2.0",
    "solidity-coverage": "^0.8.5"
  }
}
